@model TableReady.Core.App.Models.EmployeeModelView

@{
    ViewData["Title"] = "Edit Employee";
}

<h3>Edit Employee Profile</h3>
<hr />
<br />
<div>
    @using (Html.BeginForm())
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Active)
            </dt>
            <dd class="col-sm-10">
                @Html.EditorFor(model => model.Active)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmployeeFullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmployeeFullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                <select asp-for="Status" asp-items="@ViewBag.EmployeeStatus" value=@ViewBag.EmployeeStatusV selected="selected"></select>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EndDate)
            </dt>
            <dd class="col-sm-10">
                @Html.EditorFor(model => model.EndDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Role)
            </dt>
            <dd class="col-sm-10">
                <select asp-for="Role" asp-items="ViewBag.EmployeeRole" value=@ViewBag.EmployeeRoleV selected="selected"></select>
            </dd>
            @Html.HiddenFor(model => model.EmployeeId)
            @Html.HiddenFor(model => model.RestaurantId)
            <dt class="col-sm-2"><input type="submit" value="Update" class="btn btn-primary" /></dt>
            <dd class="col-sm-10"></dd>
        </dl>
    }
</div>
<div>
    <a class="btn btn-dark" asp-action="RestaurantEmployeesShow">Back to List</a>
</div>
