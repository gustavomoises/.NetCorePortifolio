@model TableReady.Core.App.Models.OwnerModelView

@{
    ViewData["Title"] = "Owner Edit";
}
<div id="Error" style="color: red;">
    <p>@ViewBag.ErrorMessage</p>
</div>
<div id="Error" style="color: blue;">
    <p>@ViewBag.Message</p>
</div>
<h3>Edit Owner</h3>
<hr />
<br />
<div>

    @using (Html.BeginForm())
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Active)
            </dt>
            <dd class="col-sm-10">
                @Html.EditorFor(model => model.Active)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OwnerFullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OwnerFullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                <select asp-for="Status" asp-items="ViewBag.OwnerStatus"></select>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EndDate)
            </dt>
            <dd class="col-sm-10">
                @Html.EditorFor(model => model.EndDate)
            </dd>

            @Html.HiddenFor(model => model.OwnerId)
            @Html.HiddenFor(model => model.RestaurantId)
            <dt class="col-sm-2"><input type="submit" value="Update" class="btn btn-primary" /></dt>
            <dd class="col-sm-10"></dd>

        </dl>
    }
</div>
<div>
    <a class="btn btn-dark" asp-action="RestaurantOwnersShow">Back to List</a>
</div>
