@model TableReady.Core.App.Models.ResCustomerModelView

@{
    ViewData["Title"] = "Edit Reservations";
}
<div id="Error" style="color: red;">
    <p>@ViewBag.ErrorMessage</p>
</div>
<div id="Error" style="color: blue;">
    <p>@ViewBag.Message</p>
</div>
<h3>Update Reservation</h3>
<hr />
<br />
<div>
    @using (Html.BeginForm())
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Restaurant)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Restaurant)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReservationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReservationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReservationDate_new)
            </dt>
            <dd class="col-sm-10">
                @Html.EditorFor(model => model.ReservationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PartySize)
            </dt>
            <dd class="col-sm-10">
                @Html.EditorFor(model => model.PartySize, new { @type = "number", @min = "1", @max = "100" })
                <span asp-validation-for="PartySize" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EntryOrigin)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EntryOrigin)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReservationStatus)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReservationStatus)
            </dd>
            @Html.HiddenFor(model => model.ReservationEntryId)
            <dt class="col-sm-2"><input type="submit" value="Update" class="btn btn-primary" /></dt>
            <dd class="col-sm-10"></dd>
        </dl>
    }
</div>
<div>
    <a class="btn btn-dark" asp-action="ReservationsShow">Back to List</a>
</div>
